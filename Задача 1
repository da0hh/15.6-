#include <iostream>
#include <string>
#include <cassert>
#include <vector>

using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    int a[] = { -2, 1, -3, 4, -1, 2, 1, -5, 4 };
    int n = 9; 
    int max_sum = -100000; 
    int best_i = 0, best_j = 0;

    for (int i = 0; i < n; i++) {
        for (int j = i; j < n; j++) {
            int current_sum = 0;

            for (int k = i; k <= j; k++) {
                current_sum += a[k];
            }
            if (current_sum > max_sum) {
                max_sum = current_sum;
                best_i = i;
                best_j = j;
            }
        }
    }

    cout << "Индексы: " << best_i << " и " << best_j << endl;
}
